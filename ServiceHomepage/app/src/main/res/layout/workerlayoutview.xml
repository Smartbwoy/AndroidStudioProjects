<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/worker_search_image"
        android:layout_width="91dp"
        android:layout_height="97dp"
        android:layout_margin="5sp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/worker2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/worker_search_username"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="User Name" />

    <TextView
        android:id="@+id/worker_search_location"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:text="Location"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/worker_search_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="72dp" />

    <RatingBar
        android:id="@+id/worker_search_ratingBar"
        style="@android:style/Widget.Holo.RatingBar"
        android:layout_width="183dp"
        android:layout_height="23dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="5"
        android:stepSize="10"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="90dp" />

</android.support.constraint.ConstraintLayout>